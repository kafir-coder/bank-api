{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es2019",
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDirs": [
      "src",
      "__tests__"
    ],
    "baseUrl": ".",
    "paths": {
      "@/tests/*": [
        "./__tests__/*"
      ],
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src",
    "tests"
  ],
  "_moduleAliases": {
    "@": "dist"
  },
  "exclude": []
}